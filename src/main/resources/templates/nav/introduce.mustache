    .develop__wrap {
        display: flex;
        flex-wrap: wrap;
    }

    .profile__img {
        width: 350px;
        height: 350px;
        border-radius: 70%;
        overflow: hidden;
        background: #FFF; /* 흰색 배경 설정 */
