        background-color: #F9F9F9;
        padding: 50px 0;
    }

    .developers {
        background-color: #FFFFFF;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 25px;
        transition: transform 0.3s ease-in-out;
    }

    .developers:hover {
        transform: translateY(-5px);
    }

    .developer__profile {
        margin-top: 20px;
    }

    .developer__profile h1 {
        margin-bottom: 5px;
    }

    .developer__profile h1,
    .developer__profile h2 {
        color: #333333;
        margin: 0;
        font-size: 1.3rem;
    }

    .dev__social {
        margin-top: 10px;
    }

    .dev__social a {
        display: flex;
        align-items: center;
        color: #555555;
        text-decoration: none;
    }

    .dev__social a i {
        margin-right: 5px;
    }

    .dev__social a:hover {
        color: #007BFF;
    }

    /* CSS styles for CSU MAP section */
    .csu-map {
        opacity: 0;
        transform: translateY(-50px);
        transition: opacity 0.5s, transform 0.5s;
    }

    .csu-map.show {
        opacity: 1;
        transform: translateY(0);
    }

    .goal {
        opacity: 0;
        transform: translateY(50px);
        transition: opacity 0.5s, transform 0.5s;
    }

    .goal.show {
        opacity: 1;
        transform: translateY(0);
    }

    /* CSS styles for developers section */
    .fade-in {
        opacity: 0;
        transform: translateY(50px);
        animation: fadeInUp 0.5s ease-out forwards;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    // JavaScript code for scroll animation
    function animateElementsOnScroll() {
        const csuMapSection = document.querySelector('.csu-map');
        const goalSection = document.querySelector('.goal');
        const developersSection = document.querySelector('.footer-con');

        const csuMapSectionTop = csuMapSection.getBoundingClientRect().top;
        const goalSectionTop = goalSection.getBoundingClientRect().top;
        const developersSectionTop = developersSection.getBoundingClientRect().top;

        const windowHeight = window.innerHeight;

        if (csuMapSectionTop < windowHeight) {
            csuMapSection.classList.add('show');
        }

        if (goalSectionTop < windowHeight) {
            goalSection.classList.add('show');
        }

        if (developersSectionTop < windowHeight) {
            developersSection.classList.add('show');
        }
    }

    window.addEventListener('scroll', animateElementsOnScroll);
    window.addEventListener('DOMContentLoaded', animateElementsOnScroll);
</script>

