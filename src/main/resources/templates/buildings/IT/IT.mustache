    function changeTimetableImage(classroomId) {
        var imageSrc = classroomImages[classroomId];
        if (imageSrc) {
            var imageElement = document.getElementById("selectedClassroomImageContent");
            imageElement.innerHTML = "<img src='" + imageSrc + "'>";
            var containerElement = document.getElementById("selectedClassroomImage");
            containerElement.style.display = "block";
        } else {
            var messageElement = document.getElementById("selectedClassroomImageContent");
            messageElement.innerHTML = "<p> 입력하신 강의실은 수업이 없습니다. </p>"
        }
    }

    function closeSelectedClassroomImage() {
        var imageElement = document.getElementById("selectedClassroomImageContent");
        imageElement.innerHTML = "";
        var containerElement = document.getElementById("selectedClassroomImage");
        containerElement.style.display = "none";
    }
</script>

